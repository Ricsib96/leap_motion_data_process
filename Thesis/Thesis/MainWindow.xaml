<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Thesis"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Thesis.MainWindow"
        mc:Ignorable="d"
        Title="Leap Motion Data Process" Height="370" Width="537.267" Background="White" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabControl" Height="auto" Width="auto" Grid.Row="0" BorderBrush="#FF595151" Background="#FF7FA49D" Margin="0,0,0.4,-0.4" RenderTransformOrigin="0.497,0.494">
            <TabItem x:Name="tb_main" Header="Patients" Height="23" VerticalAlignment="Top">
                <Grid Margin="0,0,0,-2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="514*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="tb_fname" HorizontalAlignment="Left" Height="23" Margin="297,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" Grid.Column="1"/>
                    <TextBox x:Name="tb_lname" HorizontalAlignment="Left" Height="23" Margin="297,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" Grid.Column="1"/>
                    <TextBox x:Name="tb_address" HorizontalAlignment="Left" Height="23" Margin="297,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" Grid.Column="1"/>
                    <TextBox x:Name="tb_tel" HorizontalAlignment="Left" Height="23" Margin="297,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" Grid.Column="1"/>
                    <DatePicker x:Name="dp_birth" HorizontalAlignment="Left" Margin="297,108,0,0" VerticalAlignment="Top" SelectedDateFormat="Short" Grid.Column="1" BorderBrush="Gray" Background="#FF7FA49D" FirstDayOfWeek="Monday" Height="24" Width="102"/>
                    <Label x:Name="lb_id" Content="asdaasd" HorizontalAlignment="Left" Margin="223,187,0,0" VerticalAlignment="Top" Visibility="Visible" Grid.Column="1" Height="26" Width="186" RenderTransformOrigin="0.5,0.5">
                        <Label.RenderTransform>
                            <TransformGroup>
                                <TranslateTransform Y="-0.001"/>
                            </TransformGroup>
                        </Label.RenderTransform>
                    </Label>


                    <ListBox x:Name="lbox_patients" HorizontalAlignment="Left" Height="248" Margin="0,20,0,0" VerticalAlignment="Top" Width="191" Background="White" BorderBrush="{x:Null}" Foreground="Black" SelectionChanged="patientSelect" Grid.Column="1"/>
                    <Label x:Name="lb_fname" Content="First Name" HorizontalAlignment="Left" Margin="219,25,0,0" VerticalAlignment="Top" Width="73" Grid.Column="1" Height="26"/>
                    <Label x:Name="lb_lname" Content="Last Name" HorizontalAlignment="Left" Margin="219,51,0,0" VerticalAlignment="Top" Width="73" Grid.Column="1" Height="26"/>
                    <Label x:Name="lb_address" Content="Address" HorizontalAlignment="Left" Margin="219,77,0,0" VerticalAlignment="Top" Width="73" Grid.Column="1" Height="26"/>
                    <Label x:Name="l_patients" Content="Patients" HorizontalAlignment="Left" Margin="62,-6,0,0" VerticalAlignment="Top" Width="60" FontSize="14" Grid.Column="1" Height="26" RenderTransformOrigin="0.5,0.5" Background="{x:Null}"/>
                    <Label x:Name="lb_address_Copy" Content="Date of Birth" HorizontalAlignment="Left" Margin="219,106,0,0" VerticalAlignment="Top" Width="78" Grid.Column="1" Height="26"/>
                    <Label x:Name="lb_address_Copy1" Content="Telephone" HorizontalAlignment="Left" Margin="219,132,0,0" VerticalAlignment="Top" Width="73" Grid.Column="1" Height="25"/>
                    <Button x:Name="btn_modify" Content="Modify" HorizontalAlignment="Left" Margin="427,162,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="modifyPatient" Height="22"/>
                    <CheckBox x:Name="cbox_new" Content="New patient" HorizontalAlignment="Left" Margin="223,165,0,0" VerticalAlignment="Top" Grid.Column="1" Click="newPatientCheck" Height="19" Width="84"/>
                    <ComboBox x:Name="cb_sex" HorizontalAlignment="Left" Margin="307,162,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1" SelectedIndex="0" Height="22" Visibility="Hidden">
                        <System:String>men</System:String>
                        <System:String>women</System:String>
                    </ComboBox>
                    <Button x:Name="btn_delete" Content="Delete" HorizontalAlignment="Left" Margin="427,189,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="deletePatient" Height="22"/>
                    <TextBox x:Name="tb_search" HorizontalAlignment="Left" Height="23" Margin="0,273,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Grid.Column="1" BorderBrush="{x:Null}" Foreground="Black" TextChanged="searchTextChanged"/>
                    <Button x:Name="btn_search" Content="Search" HorizontalAlignment="Left" Margin="149,273,0,0" VerticalAlignment="Top" Width="42" Height="22" Grid.Column="1" Click="searchPatient"/>
                    <TextBox x:Name="tb_info" HorizontalAlignment="Left" Height="76" Margin="223,216,0,0" TextWrapping="Wrap" Text="Information goes here..." VerticalAlignment="Top" Width="279" Grid.Column="1" Background="#FFB1B1B1" SelectionBrush="#FF007DFA" BorderBrush="#FFBCBCBC"/>
                </Grid>
            </TabItem>



            <TabItem x:Name="tb_newPatient" Header="Replays" HorizontalAlignment="Left" Width="80"/>
        </TabControl>
    </Grid>
</Window>
